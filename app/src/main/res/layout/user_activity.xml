<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/iconimagecontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:id="@+id/iconoImageBack"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_background"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/iconoImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    >
                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/info">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Andres Camilo Osorio Restrepo"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/nombrePersona"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="hora"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/horaMensaje"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:layout_toEndOf="@+id/info"
                android:layout_toRightOf="@+id/info">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="pais"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:id="@+id/pais"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="estado"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:id="@+id/estado"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="mensaje"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:id="@+id/ultimoMensaje"
            ></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>